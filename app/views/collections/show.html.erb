<%= @collection.title %>
<br>
<%= @collection.description %>

<br><br>

<%= link_to 'Back', collections_path, :class => 'btn btn-mini'  %>
<%= link_to "Edit", edit_collection_path(@collection) %>
<%= link_to "Delete", collection_path(@collection), method: :delete, data: { confirm: "Are you sure you want to delete this Collection?"} %>

<h2>Pictures</h2>
</div>

<div class="row">
  <ul class="thumbnails files">
<% unless @pictures.empty? %>
  <% @pictures.each do |pic| %>
    <li class="span3" id="picture_<%= pic.id %>">
    <div class="thumbnail">
      <%= image_tag pic.image.url %>
      <div class="caption">
        <p style="text-align: center;">
        <%= link_to "Edit picture", picture_path(pic) %>

        <%=
          link_to "Delete picture", pic,
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>

        </p>
      </div>
    </div>
    </li>
  <% end %>
<% end %>
</ul>
</div>

